{
  "name": "php-di-definitions/definitions-gatherer",
  "description": "Collect definition files from composer.json's",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "php-di-definitions/dummy": "^1.0",
    "php-di/php-di": "^7.1",
    "wyrihaximus/get-in-packages-composer.jason": "^2.3.0"
  },
  "require-dev": {
    "wyrihaximus/makefiles": "^0.5.0",
    "wyrihaximus/test-utilities": "^8.5.0"
  },
  "autoload": {
    "psr-4": {
      "PHPDIDefinitions\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPDIDefinitions\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupol/composer-packages": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true,
      "localheinz/composer-normalize": true,
      "mindplay/composer-locator": true,
      "ocramius/package-versions": true,
      "phpstan/extension-installer": true,
      "wyrihaximus/makefiles": true,
      "wyrihaximus/test-utilities": true
    },
    "platform": {
      "php": "8.4.13"
    },
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "make on-install-or-update || true"
    ],
    "post-update-cmd": [
      "make on-install-or-update || true"
    ]
  }
}
